extends layout

block content
  .col-md-4.col-md-offset-4(style='margin-top: 10vh;')
    .container
      h1 Register Page
      p.lead Register admin users here.
      form(role='form', action="/register",method="post", style='max-width: 300px;')
        if (message.length > 0)
          form-group
            .alert.alert-danger
              p= message
        .form-group
            input.form-control(type='text', name="username", placeholder='Enter Username', required)
        .form-group
          input.form-control(type='password', name="password", placeholder='Password', required)
        button.btn.btn-primary.btn-block.inline-block(type='submit', style='margin-bottom: 5px;') Submit
        a(href='/')
          button.btn.btn-warning.btn-block(type="button") Cancel
